<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet rc.css?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ComboBox?>

<VBox styleClass="settingsRoot" xmlns="http://javafx.com/javafx/8.0.51" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.danlz.remotecontrol.samsung.gui.SettingsController">
  <children>
    <GridPane styleClass="parametersPane">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" maxWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="130.0" maxWidth="130.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="55.0" maxWidth="55.0" />
      </columnConstraints>
      <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      </rowConstraints>
      <children>
        <Label text="TV address:" />
        <Label text="TV port:" GridPane.rowIndex="1" />
        <Label text="Controller name:" GridPane.rowIndex="2" />
        <ComboBox fx:id="addressComboBox" editable="true" GridPane.columnIndex="1" />
        <Spinner fx:id="portSpinner" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="controllerNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button onAction="#findButtonAction" text="Find" GridPane.columnIndex="2" />
        <Button onAction="#defaultPortButtonAction" text="Default" GridPane.columnIndex="2" GridPane.rowIndex="1" />
      </children>
    </GridPane>
    <HBox styleClass="buttonsRow">
      <children>
        <Button defaultButton="true" onAction="#okButtonAction" text="OK" />
        <Button cancelButton="true" onAction="#cancelButtonAction" text="Cancel" />
      </children>
    </HBox>
  </children>
</VBox>
